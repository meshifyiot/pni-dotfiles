brew "zlib"                 # zlib is a general-purpose compression library
brew "zsh-autosuggestions"  # zsh-autosuggestions is a plugin for zsh to provide autosuggestions
brew "jq"                   # Command-line JSON processor
brew "qrencode"             # QR Code generation
