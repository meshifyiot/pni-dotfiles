# Development Tools
brew "automake"             # GNU automake utility program
brew "pkg-config"           # helper tool used when compiling applications and librarie
brew "coreutils"            # GNU File, Shell, and Text utilities
brew "libtool"              # generic library support script that hides the complexity of using shared libraries behind a consistent, portable interface
brew "gcc"                  # GNU Compiler Collection
brew "mkcert"               # mkcert is a tool for generating certificates
brew "nvm"                  # Node Version Manager
cask "docker"               # Docker container management
cask "vagrant"              # Vagrant is a tool for building and managing virtual machines

