alias gd="git diff"
alias ga="git add"
alias gcm="git checkout master"
alias glm="git checkout master && git pull"
alias gcam="git commit -am"
alias gcmsg="git commit --message"
alias gs="git status"
alias glg="git log --graph --decorate --pretty=oneline --abbrev-commit --all"
alias clone="git clone"
alias git-summary="~/.dotfiles/git-summary/git-summary"
alias gopen="open_git_repo_online"
alias gcho="git checkout"
alias grim="git checkout development && git pull && git checkout - && git rebase -i development"

